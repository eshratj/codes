#include<bits/stdc++.h>
using namespace std;

int main(){
    int n;
    cin >> n;
    int cnt = 0, rnt = 0;
    string s;
    cin >> s;
    for(int i=0; i<n; i++){
        if(s[i]== '1')
            cnt+=2;
        else
            rnt+=2;
   }
   int res = n - min(cnt, rnt);
   cout << res  << endl;
   return 0;
}
